{{template "base" .}}
{{define "main"}}
  <main id="main">

    <!-- ======= Works Section ======= -->
    <section class="section site-portfolio">
      <div class="container">
        <div class="row mb-5 align-items-center">
          {{ range $pin := .pins }}
          <div class="item branding col-sm-6 col-md-4 col-lg-4 mb-4">
            <a href="/pin/{{ $pin.ID }}" class="item-wrap fancybox">
              <div class="work-info">
                <h3>{{ $pin.Description }}</h3>
              </div>
              <img class="img-fluid" src="{{ $pin.PinLink }}">
            </a>
          </div>
          {{ end }}
        </div>
      </div>
    </section><!-- End  Works Section -->


    <!-- ======= Services Section ======= -->
    <section class="section services">
      <div class="container">
        <div class="row justify-content-center text-center mb-4">
          <div class="col-5">
            <h3 class="h3 heading">Popular Ideas</h3>
            <p>We think you might like these ideas</p>
          </div>
        </div>
        <div class="row">

          <div class="col-12 col-sm-6 col-md-6 col-lg-3">
            <i class="bi bi-card-checklist"></i>
            <h4 class="h4 mb-2">Conceptual photography</h4>
            <ul class="list-unstyled list-line">
              <li>Portrait</li>
              <li>Woman</li>
              <li>Man</li>
              <li>Arms</li>
              <li>Flower</li>
            </ul>
          </div>
          <div class="col-12 col-sm-6 col-md-6 col-lg-3">
            <i class="bi bi-binoculars"></i>
            <h4 class="h4 mb-2">Psuchedelic</h4>
            <ul class="list-unstyled list-line">
              <li>Eyes</li>
              <li>Tattoo</li>
              <li>Art</li>
              <li>Phone Wallpaper</li>
              <li>Drawing</li>
            </ul>
          </div>
          <div class="col-12 col-sm-6 col-md-6 col-lg-3">
            <i class="bi bi-brightness-high"></i>
            <h4 class="h4 mb-2">Landscape</h4>
            <ul class="list-unstyled list-line">
              <li>Mountains</li>
              <li>Sea</li>
              <li>Sunset</li>
              <li>Forest</li>
              <li>Night</li>
            </ul>
          </div>
          <div class="col-12 col-sm-6 col-md-6 col-lg-3">
            <i class="bi bi-calendar4-week"></i>
            <h4 class="h4 mb-2">Fairytale</h4>
            <ul class="list-unstyled list-line">
              <li>Art</li>
              <li>Tattoo</li>
              <li>Toys</li>
              <li>Wings</li>
              <li>Mythology</li>
            </ul>
          </div>
        </div>
      </div>
    </section><!-- End Services Section -->

    <!-- ======= Testimonials Section ======= -->
    <section class="section pt-0">
      <div class="container">

        <div class="testimonials-slider swiper" data-aos="fade-up" data-aos-delay="100">
          <div class="swiper-wrapper">
          {{ range $banner := .banners }}
            <div class="swiper-slide">
              <div class="testimonial-wrap">
                <div class="testimonial">
                  <img src="{{ $banner.img }}" alt="Image" class="img-fluid">
                </div>
              </div>
            </div><!-- End testimonial item -->
          {{ end }}
          </div>
          <div class="swiper-pagination"></div>
        </div>

      </div>
    </section><!-- End Testimonials Section -->

  </main><!-- End #main -->
{{ end }}